<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" >


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dip" android:padding="5dip" >

        <include android:id="@+id/bar" layout="@layout/template_bar_logged" />
    </LinearLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
        <LinearLayout

                android:layout_width="100dip"
                android:layout_height="240dip" android:layout_gravity="left|center_vertical|top|left" android:padding="5dip">

            <include android:id="@+id/list" layout="@layout/template_list"
                     android:layout_gravity="center_horizontal|bottom"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="220dip"
                android:layout_height="240dip" android:layout_gravity="right" android:padding="5dip">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Tasks"
                    android:id="@+id/textView" android:layout_gravity="center_horizontal|top"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="70dip" android:padding="2dip" >

        <include android:id="@+id/footer" layout="@layout/template_footer" />
    </LinearLayout>

</LinearLayout>